{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schedule Widget Data Schema",
  "description": "Normalized schema for event schedules (conferences, camps, church events)",
  "type": "object",
  "required": ["eventInfo", "days"],
  "properties": {
    "eventInfo": {
      "type": "object",
      "description": "Basic information about the event",
      "required": ["title", "dateRange"],
      "properties": {
        "title": {
          "type": "string",
          "description": "Main event title",
          "examples": ["TabƒÉra de Tineret 2025", "Conferin»õa de Pastori"]
        },
        "subtitle": {
          "type": "string",
          "description": "Optional tagline or subtitle",
          "examples": ["Reconnecting with Purpose"]
        },
        "dateRange": {
          "type": "string",
          "description": "Human-readable date range",
          "examples": ["1-4 Mai 2025", "17-18 Octombrie 2024"]
        },
        "location": {
          "type": "string",
          "description": "Event location",
          "examples": ["Pensiunea Ie»ôire, Iclod", "Hotel Serenity, Cluj-Napoca"]
        },
        "timezone": {
          "type": "string",
          "description": "IANA timezone identifier",
          "default": "Europe/Bucharest",
          "examples": ["Europe/Bucharest", "Europe/London"]
        },
        "description": {
          "type": "string",
          "description": "Optional event description"
        }
      }
    },
    "days": {
      "type": "array",
      "description": "Array of days in the schedule",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "date", "dayLabel", "activities"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the day",
            "pattern": "^day-[0-9]+$",
            "examples": ["day-1", "day-2"]
          },
          "date": {
            "type": "string",
            "format": "date",
            "description": "ISO date format (YYYY-MM-DD)",
            "examples": ["2025-05-01"]
          },
          "dayLabel": {
            "type": "string",
            "description": "Display label for the day",
            "examples": ["Joi, 1 Mai", "Vineri, 2 Mai"]
          },
          "theme": {
            "type": "string",
            "description": "Optional theme/title for the day",
            "examples": ["Sosire »ôi Bun Venit", "√ént√¢lnire & prezentƒÉri de searƒÉ"]
          },
          "activities": {
            "type": "array",
            "description": "List of activities for this day",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["id", "startTime", "title", "type"],
              "properties": {
                "id": {
                  "type": "string",
                  "description": "Unique identifier for the activity",
                  "examples": ["activity-1", "session-2-day-3"]
                },
                "startTime": {
                  "type": "string",
                  "pattern": "^([0-1][0-9]|2[0-3]):[0-5][0-9]$",
                  "description": "Start time in HH:MM format (24h)",
                  "examples": ["09:00", "14:30"]
                },
                "endTime": {
                  "type": "string",
                  "pattern": "^([0-1][0-9]|2[0-3]):[0-5][0-9]$",
                  "description": "End time in HH:MM format (24h)",
                  "examples": ["10:00", "16:00"]
                },
                "title": {
                  "type": "string",
                  "description": "Activity title",
                  "examples": ["Sesiunea 1 ‚Äì RƒÉm√¢n√¢nd pe linie", "Pr√¢nz", "√énchinare + Mesaj"]
                },
                "type": {
                  "type": "string",
                  "enum": ["logistics", "session", "meal", "break", "worship", "recreation", "meeting", "other"],
                  "description": "Type of activity for color coding and icons"
                },
                "icon": {
                  "type": "string",
                  "description": "Emoji or icon identifier",
                  "examples": ["üõèÔ∏è", "üìñ", "üçΩÔ∏è", "‚òï", "üôè"]
                },
                "description": {
                  "type": "string",
                  "description": "Detailed description of the activity"
                },
                "location": {
                  "type": "string",
                  "description": "Specific location or room",
                  "examples": ["Sala Mare", "Hotel Serenity", "BerƒÉria 700"]
                },
                "speakers": {
                  "type": "array",
                  "description": "List of speakers/facilitators",
                  "items": {
                    "type": "object",
                    "required": ["name"],
                    "properties": {
                      "name": {
                        "type": "string",
                        "examples": ["Daniel Suciu", "John Folmar"]
                      },
                      "role": {
                        "type": "string",
                        "examples": ["Vorbitor principal", "Moderator"]
                      },
                      "photo": {
                        "type": "string",
                        "format": "uri",
                        "description": "URL to speaker photo"
                      }
                    }
                  }
                },
                "tags": {
                  "type": "array",
                  "description": "Tags for filtering",
                  "items": {
                    "type": "string"
                  },
                  "examples": [["copii", "adul»õi"], ["obligatoriu", "op»õional"]]
                },
                "color": {
                  "type": "string",
                  "pattern": "^#[0-9A-Fa-f]{6}$",
                  "description": "Optional custom color (hex format)",
                  "examples": ["#3B82F6", "#10B981"]
                },
                "isOptional": {
                  "type": "boolean",
                  "description": "Whether attendance is optional",
                  "default": false
                },
                "requiresRegistration": {
                  "type": "boolean",
                  "description": "Whether registration/signup is required",
                  "default": false
                },
                "maxParticipants": {
                  "type": "integer",
                  "description": "Maximum number of participants",
                  "minimum": 1
                },
                "links": {
                  "type": "array",
                  "description": "Related links (materials, registration, etc.)",
                  "items": {
                    "type": "object",
                    "required": ["url", "label"],
                    "properties": {
                      "url": {
                        "type": "string",
                        "format": "uri"
                      },
                      "label": {
                        "type": "string",
                        "examples": ["Materiale", "√énregistrare", "Zoom Link"]
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "activityTypes": {
      "type": "object",
      "description": "Configuration for activity type styling",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "color": {
            "type": "string",
            "pattern": "^#[0-9A-Fa-f]{6}$",
            "description": "Color for this activity type"
          },
          "icon": {
            "type": "string",
            "description": "Default icon for this activity type"
          },
          "label": {
            "type": "string",
            "description": "Display label for this type"
          }
        }
      },
      "default": {
        "logistics": { "color": "#9CA3AF", "icon": "üìã", "label": "LogisticƒÉ" },
        "session": { "color": "#3B82F6", "icon": "üìñ", "label": "Sesiune" },
        "meal": { "color": "#F59E0B", "icon": "üçΩÔ∏è", "label": "MasƒÉ" },
        "break": { "color": "#FDE68A", "icon": "‚òï", "label": "PauzƒÉ" },
        "worship": { "color": "#8B5CF6", "icon": "üôè", "label": "√énchinare" },
        "recreation": { "color": "#10B981", "icon": "‚öΩ", "label": "Recreere" },
        "meeting": { "color": "#EC4899", "icon": "üë•", "label": "√ént√¢lnire" },
        "other": { "color": "#6B7280", "icon": "üìå", "label": "Altele" }
      }
    },
    "settings": {
      "type": "object",
      "description": "Optional display settings",
      "properties": {
        "showEndTimes": {
          "type": "boolean",
          "description": "Whether to display end times",
          "default": true
        },
        "showIcons": {
          "type": "boolean",
          "description": "Whether to show activity icons",
          "default": true
        },
        "showLocations": {
          "type": "boolean",
          "description": "Whether to show location information",
          "default": true
        },
        "showSpeakers": {
          "type": "boolean",
          "description": "Whether to show speaker names",
          "default": true
        },
        "groupByType": {
          "type": "boolean",
          "description": "Whether to group activities by type",
          "default": false
        },
        "highlightCurrentActivity": {
          "type": "boolean",
          "description": "Whether to highlight the current time slot",
          "default": true
        }
      }
    }
  }
}
